<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MembersList"
    android:background="#E0E0E0" >
    
	<RelativeLayout 
        android:id="@+id/layAppsListTopbar"
        android:layout_width="match_parent" 
	    android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
		android:layout_alignParentLeft="true"
        android:background="#357EC7">
        <TextView 
            android:id="@+id/apps_farm_label"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_marginTop="8dp"
	        android:layout_marginLeft="8dp"
			android:layout_centerVertical="true"
	        android:text="Farm:"
	        android:textSize="20sp"
	        android:textColor="#FFFFFF"
	        />
        <TextView 
            android:id="@+id/apps_farm"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_marginTop="8dp"
	        android:layout_marginLeft="8dp"
	        android:layout_toRightOf="@+id/apps_farm_label"
			android:layout_centerVertical="true"
	        android:text="Bowman Farms"
	        android:textSize="20sp"
	        android:textColor="#FFFFFF"
	        />
    </RelativeLayout>
    <RelativeLayout 
        android:id="@+id/layAppsListHeaderbar"
        android:layout_width="match_parent" 
	    android:layout_height="wrap_content"
	    android:layout_below="@+id/layAppsListTopbar"
		android:layout_alignParentLeft="true"
        android:background="#6E6E6E">
        <TextView 
	        android:layout_width="60dp"
	        android:layout_height="wrap_content"
	        android:layout_marginTop="8dp"
			android:layout_centerVertical="true"
			android:layout_alignParentLeft="true"
	        android:text="Sync?"
	        android:gravity="center"
	        android:textSize="15sp"
	        android:textColor="#FFFFFF"
	        />
    </RelativeLayout>
    
	<ListView
	    android:id="@+id/apps_list_view"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/layAppsListHeaderbar" />
	
</RelativeLayout>